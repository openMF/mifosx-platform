TAG=latest
SERVER_URL=http://localhost:8080
FINERACT_PORT=8080
WEB_APP_URL=http://localhost:80
WEB_APP_PORT=80
POSTGRES_USER=root
PG_PASSWORD=your_secure_password_here
POSTGRES_PASSWORD=superuser_secure_password_here
FINERACT_DB_USER=postgres
FINERACT_DB_PASS=your_secure_password_here
FINERACT_TENANTS_DB_NAME=fineract_tenants
FINERACT_TENANT_DEFAULT_DB_NAME=fineract_default

# Scalable Manager-Worker Configuration 
# Modes: WRITE for Manager node, READ for Worker nodes
FINERACT_MANAGER_MODE=WRITE
FINERACT_WORKER_MODE=READ
# Number of Worker nodes to deploy (Default is 0, modified by install.sh)
FINERACT_WORKERS_COUNT=0

# Messaging & External Services
# Required for Communication between Manager and Workers
FINERACT_MESSAGING_ACTIVEMQ_BROKER_URL=tcp://activemq:61616
# Enable BIRT Report Engine by default
FINERACT_REPORT_ENGINE_BIRT_ENABLED=true